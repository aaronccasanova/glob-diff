{
  "include": ["src"],
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2022"],
    // TSHY ERROR: verbatimModuleSyntax is incompatible with multi-dialect builds.
    "verbatimModuleSyntax": false
  }
}
